<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/shoppingListFragment">

    <fragment
        android:id="@+id/shoppingListFragment"
        android:name="de.kuefe.shoppinglist.shoppinglist.ShoppingListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_shopping_list">
        <action
            android:id="@+id/action_shoppingListFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="de.kuefe.shoppinglist.articledetail.ArticleDetailFragment"
        android:label="@string/article"
        tools:layout="@layout/fragment_article_detail">
        <argument
            android:name="selectedArticle"
            app:argType="de.kuefe.shoppinglist.model.Article" />
        <action
            android:id="@+id/action_articleDetailFragment_to_shoppingListFragment"
            app:destination="@id/shoppingListFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/shoppingListFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>