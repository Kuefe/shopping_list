<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="databaseArticle"
            type="de.kuefe.shoppinglist.model.Article" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/article_quantity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{String.valueOf(databaseArticle.quantity)}"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2.5" />

        <TextView
            android:id="@+id/article_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{databaseArticle.unit}"
            app:layout_constraintStart_toEndOf="@id/article_quantity_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="kg" />

        <TextView
            android:id="@+id/article_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{databaseArticle.description}"
            app:layout_constraintStart_toEndOf="@id/article_unit_text"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Bananen" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>